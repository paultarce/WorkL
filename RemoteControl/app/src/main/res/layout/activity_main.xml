<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnEsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:textSize="20dp"
            android:text="Blank" />

        <Button
            android:id="@+id/btnZoomIn"
            android:layout_width="43dp"
            android:layout_height="98dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="116dp"
            android:text="+"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnZoomOut"
            android:layout_width="43dp"
            android:layout_height="98dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnZoomIn"
            android:layout_marginBottom="167dp"
            android:textSize="25dp"
            android:text="-" />

        <Button
            android:id="@+id/btnRotateRight"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnRotateLeft"
            android:layout_marginEnd="91dp"
            android:text="Rotate Right"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnMoveUp"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnRotateRight"
            android:layout_marginStart="117dp"
            android:text="↑"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnMoveDown"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnMoveUp"
            android:layout_marginBottom="140dp"
            android:text="↓"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnMoveRight"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnRotateRight"
            android:layout_centerVertical="true"
            android:text="Right"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnMoveLeft"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnEsc"
            android:layout_centerVertical="true"
            android:text="Left"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnRotateLeft"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnEsc"
            android:layout_marginTop="143dp"
            android:text="Rotate Left"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnRotateLeft3"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnEsc"
            android:layout_marginTop="143dp"
            android:text="Rotate Left"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnMoveDown"
            android:layout_alignStart="@+id/btnEsc"
            android:text="Previous"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnMoveDown"
            android:layout_alignEnd="@+id/btnRotateRight"
            android:text="Next"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnCapture2"
            android:layout_marginEnd="100dp"
            android:text="Save Pict"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnFullScreen"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnCapture2"
            android:layout_toEndOf="@+id/btnEsc"
            android:text="FullScreen"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnEsc"
            android:layout_alignTop="@+id/btnCapture2"
            android:text="Delete"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnCapture2"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnZoomIn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="68dp"
            android:text="Capture"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnConnections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnZoomIn"
            android:layout_alignTop="@+id/btnEsc"
            android:text="Connections" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>